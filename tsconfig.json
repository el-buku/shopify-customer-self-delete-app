{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "lib": ["esnext"],
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "lib",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "incremental": true
  },
  "include": ["./src"],
  "exclude": ["./node_modules"]
}
